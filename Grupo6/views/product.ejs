<!DOCTYPE html>
<html lang="es">
<head>
 	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="shortcut icon" href="/images/logo.png" />
	
	<title>Phone Market Argentina</title>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<link rel="stylesheet" href="/css/app.css">
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

</head>

<body>
  <% if (locals.user) { %>
    <%- include("./partials/headerLogeado") %>
  <% } else { %>
    <%- include("./partials/header") %>
  <% } %>

  <main class="container-products-wrapper">
    <div class="row">
      <div class="col-12 col-lg-8">
        <% if (!producto) { %>
          <p>No se encontró el producto.</p>
        <% } else { %>
          <h2><%= producto.nombre %></h2>

          <img
            src="/images/products/<%= producto.imagen %>"
            alt="<%= producto.nombre %>"
            class="product-detail-img"
            onerror="this.src='/images/products/default.png'">

          <p><%= producto.descripcion %></p>
        <% } %>
      </div>

      <div class="col-12 col-lg-4">
        <h3>Comentarios</h3>

        <% 
        const comentarios = producto.comentarios;
      %>

<% if (comentarios.length > 0) { %>
  <% for (var i = 0; i < comentarios.length; i++) { %>
    <div class="comment">
      <img src="/images/users/<%= comentarios[i].imagenPerfil %>" alt="perfil" class="comment-img">
      <strong><a href="/users/profile/<%= comentarios[i].idUsuario %>"> <%= comentarios[i].user.usuario %>:</a></strong>
      <span><%= comentarios[i].texto %></span>
    </div>
  <% } %>
  
<% } else { %>
  <p>No hay comentarios.</p>
<% } %>

        <% if (locals.user != undefined) { %>
          <form class="form" action="/products/product-comment/<%= producto.id %>" method="POST">
            <input class="form-input" type="text" name="comment" value="" placeholder="Agregar comentario">
            <button type="submit" class="">AGREGAR COMENTARIO</button>
          </form>
        <% } else { %>
          <p >Debes estar logueado para agregar un comentario</p>
          <a style="color: lightskyblue;" href="/users/login">Iniciar sesión</a>
        <% } %>

      </div>
    </div>
  </main>

  <%- include("./partials/footer") %>
</body>
</html>
