<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= producto.nombre %> - Mercado Liebre</title>
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
    <header class="main-header">
        <div class="container">
            <h1>Mercado Liebre</h1>
        </div>
    </header>

    <main class="container products-wrapper">
        <div class="row">
            <div class="col-12 col-lg-8">
                <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" class="product-detail-img">
                <h2><%= producto.nombre %></h2>
                <p><%= producto.descripcion %></p>
            </div>

            <div class="col-12 col-lg-4">
                <h3>Comentarios</h3>
                <% producto.comentarios.forEach(comentario => { %>
                    <div class="comment">
                        <img src="<%= comentario.imagen %>" alt="perfil" class="comment-img">
                        <strong><%= comentario.usuario %>:</strong> 
                        <span><%= comentario.texto %></span>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>

    <footer class="main-footer">
        <div class="container">
            <p>Â© Mercado Liebre 2025</p>
        </div>
    </footer>
</body>
</html>
