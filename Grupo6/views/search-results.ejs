<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title>Mercado Liebre Argentina - Resultados de búsqueda</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Resultados de búsqueda -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda para "<%= search %>"</h2>
			</div>

			<% if (products && products.length > 0) { %>
				<% products.forEach(producto => { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detail/<%= producto.id %>">
								<figure class="product-box_image">
									<img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" class="product-detail-img">
								</figure>
								<article class="product-box_data">
									<h2><%= producto.nombre %></h2>
									<p><%= producto.descripcion %></p>
								</article>
							</a>
						</section>
					</div>
				<% }) %>
			<% } else { %>
				<div class="col-12">
					<p>No se encontraron resultados para "<%= search %>".</p>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Resultados de búsqueda -->

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>
</html>
