<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />
	
	<title>Mercado Liebre Argentina - Perfil</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<% if (user.fotoPerfil) { %>
					<img src="/images/users/<%= user.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
				  <% } else { %>
					<img src="/images/users/profile-default.png" alt="foto de perfil" class="foto-perfil">
				  <% } %>
				  
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center">
					<h1 class="main-title"><%= user.usuario %></h1>
					<a class="btn mt-3 ml-4" href="#">SEGUIR</a>
				</div>
				<div>
					<ul>
						<li><%= user.email %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
<div class="container products-wrapper">
	<div class="row">
	  <div class="col-12">
		<h2 class="products-title">Mis productos</h2>
	  </div>
  
	  
		<% for (let i = 0; i < productos.length; i++) { %>
		  <div class="col-12 col-sm-6 col-lg-3">
			<section class="product-box">
			  <a href="/products/detail/<%= productos[i].id %>">
				<figure class="product-box_image">
					<img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].nombre %>">
				</figure>
				<article class="product-box_data">
				  <h2><%= productos[i].nombre %></h2>
				  <p><%= productos[i].descripcion %></p>
				  <%
  let cant = 0;
  if (productos[i].comentarios) {
    cant = productos[i].comentarios.length;
  }
%>
<p>Comentarios: <%= cant %></p>

				</article>
			  </a>
			</section>
		  </div>
		<% } %>
	  <% } else { %>
		<p class="col-12">Todav√≠a no cargaste productos.</p>
	  <% } %>
	</div>
  </div>
  <!-- /Mis productos -->
  

	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>
